extends base.pug

block content
    h4 Update posting
    form(method="POST")
        input(name="title", placeholder="Video Title", value=posting.title, required)
        input(placeholder="Description", required, type="text", name="description", minlength=20, value=posting.description)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=posting.hashtags.join())
        input(value="Save",type="submit")